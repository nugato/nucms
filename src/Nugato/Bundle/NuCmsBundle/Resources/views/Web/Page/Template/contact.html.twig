{% extends '@NugatoNuCms/Web/Layout/containerWidth.html.twig' %}

{% block content %}

    <article class="mt-5">
        <header class="mb-3">
            <h1 class="t-page_title_div">{{ page.title|capitalize }}</h1>
            <span class="badge badge-secondary">Created at {{ page.createdAt|date('Y-m-d') }}</span>
        </header>
        <main>
            <div class="mb-4">
                {{ render(controller('Nugato\\Bundle\\NuCmsBundle\\Controller\\Web\\ContactController:renderForm')) }}
            </div>

            {{ page.content|raw }}
        </main>
    </article>

{% endblock %}